@inherits Umbraco.Web.Mvc.UmbracoViewPage<Escc.EastSussexGovUK.Umbraco.Models.JobsComponentViewModel>
@{
    Layout = null;
    Response.ContentType = "text/css";
}
@if (Model.HeaderBackgroundImage != null)
{
@:body .body { background-image: url('@Model.HeaderBackgroundImage.ImageUrl'); background-repeat: repeat-x; background-position: center top; }
@:.full-page { background: none;}
@:.jobs-header { min-height: @{@Model.HeaderBackgroundImage.Height}px; }
}