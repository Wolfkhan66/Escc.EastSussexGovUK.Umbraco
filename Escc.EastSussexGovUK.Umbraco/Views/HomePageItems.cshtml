@using Escc.Dates
@inherits Umbraco.Web.Mvc.UmbracoViewPage<Escc.EastSussexGovUK.Umbraco.Models.RssViewModel>
@{
    Layout = null;
    Response.ContentType = "text/xml";
    Response.Headers.Remove("Content-Security-Policy");
}<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="@Request.Url.Scheme://@Request.Url.Authority/escc.eastsussexgovuk/masterpages/rss/display-as-html-v2.xslt" ?>
<?xml-stylesheet type="text/css" href="@Request.Url.Scheme://@Request.Url.Authority/escc.eastsussexgovuk/css/rss.css" ?>
<rss version="2.0">
    <channel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
        <title>@Model.PageTitle.Replace("Home: ", String.Empty).Trim() - East Sussex County Council</title>
        <description>@Model.Description</description>
        <link>@Request.Url.Scheme://@Request.Url.Authority/</link>
        <language>en-GB</language>
        <copyright>@DateTime.Now.Year East Sussex County Council</copyright>
        <pubdate>@DateTime.Now.ToUkDateTime().ToRfc822DateTime()</pubdate>
        <lastbuilddate>@DateTime.Now.ToUkDateTime().ToRfc822DateTime()</lastbuilddate>
        <image>
            <title>East Sussex County Council logo</title>
            <url>@Request.Url.Scheme://@Request.Url.Authority/escc.eastsussexgovuk/masterpages/rss/escc-logo.gif</url>
            <link>@Request.Url.Scheme://@Request.Url.Authority/</link>
            <width>90</width>
            <height>65</height>
        </image>
    @foreach (var item in Model.Items)
    {
        var url = "<link>" + HttpUtility.HtmlEncode(item.Link.Url) + "</link>";
        <item>
            <title>@item.Link.Text</title>
            <description>@item.Description</description>
            @Html.Raw(url)
            <pubdate>@item.PublishedDate.ToUkDateTime().ToRfc822DateTime()</pubdate>
            <guid ispermalink="false">@item.Id</guid>
            <source url="@Request.Url" />
        </item>
    }
    </channel>
</rss>
