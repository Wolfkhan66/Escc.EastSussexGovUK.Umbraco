@using ClientDependency.Core.Mvc
@using Escc.ClientDependencyFramework
@using EsccWebTeam.EastSussexGovUK
@* Grab Google CDN's jQuery, with a protocol relative URL; fall back to local JQuery if necessary *@
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
@{
    Html.RequiresJs(JsFileAlias.Resolve("JQueryLoad"), 1);
    Html.RequiresJs(JsFileAlias.Resolve("Config"), 1);
    Html.RequiresJs(JsFileAlias.Resolve("jQueryUI"), 20);
    Html.RequiresJs(JsFileAlias.Resolve("JQueryRetry"), 20);
    Html.RequiresJs(JsFileAlias.Resolve("CrossOriginIE"), 20);
    Html.RequiresJs(JsFileAlias.Resolve("Statistics"), 20);
    Html.RequiresJs(JsFileAlias.Resolve("CascadingContent"), 20);
    Html.RequiresJs(JsFileAlias.Resolve("Analytics"));
    Html.RequiresJs(JsFileAlias.Resolve("Media"));
    Html.RequiresJs(JsFileAlias.Resolve("Documents"));
    Html.RequiresJs(JsFileAlias.Resolve("DocumentMetadata"));
    Html.RequiresJs(JsFileAlias.Resolve("AutoSuggest"));
    Html.RequiresJs(JsFileAlias.Resolve("SwitchView"));
    Html.RequiresJs(JsFileAlias.Resolve("Alert"));
    Html.RequiresJs(JsFileAlias.Resolve("Email"));
    Html.RequiresJs(JsFileAlias.Resolve("Heatmap"));
    Html.RequiresJs(JsFileAlias.Resolve("Languages"));
    Html.RequiresJs(JsFileAlias.Resolve("Banners"));
    Html.RequiresJs(JsFileAlias.Resolve("TagManager"));

    var context = new EastSussexGovUKContext();
    if (context.UserIsLibraryCatalogue)
    {
        Html.RequiresJs(JsFileAlias.Resolve("PublicLibraries"));
    }
}